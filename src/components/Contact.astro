---
import Section from './Section.astro';
import ContactFormScript from './ContactFormScript.jsx';
---

<Section>
	<form id="contact-form" name="contact" method="POST" data-netlify="true" class="flex flex-col gap-3">
		<p >
			<label class="flex flex-col gap-2">Email Address
				<input
					required
					type="email"
					name="email"
					placeholder="e.g. johndoe@gmail.com"
					class="w-full border-2 px-4 py-2 bg-neutral-200"
				/>
			</label>
		</p>
		<p>
			<button 
				type="submit" 
				class="bg-neutral-950 text-white px-8 py-2 hover:cursor-pointer hover:bg-blue-600
					   w-full md:w-auto"
			>Send</button>
		</p>
	</form>

	<!-- Success popup (hidden by default) -->
	<div id="success-popup" class="hidden fixed inset-0 flex items-center justify-center z-50 bg-black/60">
		<div class="bg-white text-black flex flex-col gap-2 py-8 px-10">
			<p class="mb-6">Form submitted successfully</p>
			<button 
				id="close-popup" 
				class="bg-black px-6 py-2 text-white hover:bg-neutral-600 hover:cursor-pointer"
			>Close</button>
		</div>
	</div>
	<ContactFormScript client:load />
</Section>