---
import { formatDate } from '@/utils/data.util';
import Section from './Section.astro';
import { Image } from 'astro:assets';

interface Props {
	title: string;
	author: string;
	tags: string[];
	minutesRead: string;
	pubDate: string;
	isPinned?: boolean;
	img: {
		src: string;
		alt: string;
	};
	imageObject: any;
}

const { title, pubDate, minutesRead, img, imageObject } = Astro.props;
const formattedDate = formatDate(pubDate);
---

<Section transition:name={img.src}>
	<div class="flex flex-col items-center">
		<div class="relative px-14 pt-6 pb-4 text-center">
			<p class="text-4xl font-bold">{title}</p>
		</div>
		<div class="text-sm mb-4">
			<span>{formattedDate}</span> - <span>{minutesRead}</span>
		</div>

		<Image
			src={imageObject[img.src]()}
			alt={img.alt}
			width={1000}
			inferSize
			format="avif"
			class="w-full aspect-[16/9]"
		/>

		
	</div>
</Section>
